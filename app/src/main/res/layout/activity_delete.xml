<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deletebg"
    android:scaleType="centerCrop"
    tools:context=".deleteActivity" >

    <RelativeLayout
        android:id="@+id/main_layout_delete"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/main_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/radius_input"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/delete_layout_Platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete_tv_Platform"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Platform"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/delete_Platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint=" "
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/delete_bt_delete"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/main_delete"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/delete_bt_back"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/main_delete"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="Back"
            android:textColor="#ffffff"
            android:textSize="25sp" />


    </RelativeLayout>

</RelativeLayout>