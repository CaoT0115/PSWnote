<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editbg"
    android:scaleType="centerCrop"
    tools:context=".editActivity" >

    <RelativeLayout
        android:id="@+id/main_layout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/main_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/radius_input"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/edit_layout_Platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_tv_Platform"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Platform"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_Platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/edit_layout_UserID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_tv_UserID"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="UserID"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_UserID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/edit_layout_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_tv_Password"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Password"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU ! !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/edit_layout_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_tv_Note"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Note"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_Note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU ! ! !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/edit_bt_edit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_edit"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="Edit"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/edit_bt_back"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_bt_edit"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="Back"
            android:textColor="#ffffff"
            android:textSize="25sp" />


    </RelativeLayout>

</RelativeLayout>