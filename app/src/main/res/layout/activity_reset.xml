<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resetbg"
    android:scaleType="centerCrop"
    tools:context=".resetActivity" >

    <RelativeLayout
        android:id="@+id/main_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/radius_input"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/main_reset">

            <LinearLayout
                android:id="@+id/reset_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reset_tv_name"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Username"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/reset_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/reset_layout_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reset_tv_old_password"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Old pwd"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/reset_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/reset_layout_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reset_tv_new_password"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="New pwd"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/reset_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU ! !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/reset_layout_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reset_tv_confirm"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Confirm pwd"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/reset_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:hint="UMU ! ! !"
                    android:padding="5dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/reset_bt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_reset"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="Reset"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:clickable="true"/>


    </RelativeLayout>

</RelativeLayout>